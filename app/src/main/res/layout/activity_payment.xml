<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9E9E8"
    tools:context=".ui.home.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/firstlayout"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/viewpagerlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="22dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"

            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/firstlayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/viewpagerlayout"
        app:layout_constraintBottom_toTopOf="@+id/linearparent"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearparent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="580dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewpagerlayout">
        <ScrollView
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paymentlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/layout1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/subtotal"
                    android:layout_marginTop="20dp"
                   android:layout_marginLeft="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Subtotal"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="$24"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Space
                    android:id="@+id/space1"
                    app:layout_constraintTop_toBottomOf="@+id/subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/layout2"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Discount"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Discount"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="70dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="10%"
                    android:textSize="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Space

                    app:layout_constraintTop_toBottomOf="@+id/Discount"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/layout3"
                    app:layout_constraintTop_toBottomOf="@+id/layout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Shipping"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="70dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Shipping"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="70dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="$10"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <Space

                        app:layout_constraintTop_toBottomOf="@+id/Shipping"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/layout4"
                    app:layout_constraintTop_toBottomOf="@+id/layout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Tax"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="70dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Tax"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="70dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="$10"
                        android:textSize="21dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <Space
                        app:layout_constraintTop_toBottomOf="@+id/Tax"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/layout4"
                    android:layout_width="450dp"
                    android:layout_height="1dp"
                    android:orientation="horizontal" />

            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/layout6"
                app:layout_constraintTop_toBottomOf="@+id/layout5"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Total"
                    android:textSize="21dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/Total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="21dp"
                    android:text="$24"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="70dp"
                    android:id="@+id/dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_margin="20dp"
                    android:layout_width="450dp"
                    android:id="@+id/layout7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@+id/layout6"
                    android:layout_height="1dp"
                    android:orientation="horizontal" />

                <com.google.android.material.button.MaterialButton
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout7"
                    android:layout_marginLeft="11dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="Check Out"
                    android:id="@+id/checkout"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    app:cornerRadius="30dp"
                    app:backgroundTint="#573A3A"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>