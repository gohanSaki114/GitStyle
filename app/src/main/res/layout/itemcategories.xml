<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:background="@drawable/secondbox"
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/boxcorner"
            android:src="@drawable/unnamed"/>
    </LinearLayout>

    <TextView
        android:id="@+id/catext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clothes"
        android:layout_marginRight="120dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/count"
        app:layout_constraintEnd_toStartOf="@id/enter"
        app:layout_constraintStart_toEndOf="@+id/card" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="59684Items"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="120dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toStartOf="@id/enter"
        app:layout_constraintStart_toEndOf="@+id/card"
        app:layout_constraintTop_toBottomOf="@id/catext" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginRight="70dp"
        android:id="@+id/enter"
        app:backgroundTint="@color/white"
        android:layout_width="35dp"
        android:background="@drawable/imageround"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/ic_baseline_chevron_right_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>